<div>
  <div>
    <h1><%= @activity.title.capitalize %> with <%=User.find(@activity.user_id).first_name.capitalize%></h1>
  </div>
  <div class="card hbuddy-card">
    <%= image_tag @activity.photo, class: "card-img-top" %>
    <%= image_tag current_user.avatar, class: "hbuddy-match-avatar bordered", width:50, height:50 %>
    <div class="card-body">
      <span class="badge text-bg-warning text-light"> <%= @activity.preference.category %></span>
      <p class="hbuddy-card-location"><%= @activity.location.capitalize %></p>
      <p class="card-text"><%= @activity.start_date %> ~ <%= @activity.end_date %></p>
      <p class="card-text"><%= @activity.total_price %>â‚¬</p>
    </div>
  </div>
  <div class="d-grid gap-2">
    <button type="button" class="btn btn-danger ">Join</button>
  </div>
  <div>
    <div>
      <div>
        <% if @activity.min_persons == nil %>
          <span class="badge text-bg-warning text-light">No buddy limit</span>
        <% else %>
          <span class="badge text-bg-warning text-light"><%= @activity.min_persons %> ~ <%= @activity.max_persons %> buddies</span>
        <% end %>
      </div>
      <div>
        <% if @activity.gender == "Not specified" %>
          <span class="badge text-bg-warning text-light">Mixed group</span>
        <% else %>
          <span class="badge text-bg-warning text-light">Group of <%= @activity.gender %></span>
        <% end %>
      </div>
      <div>
        <% if @activity.age_range != nil %>
          <span class="badge text-bg-warning text-light"><%= @activity.age_range %> years-old</span>
        <% end %>
      </div>
    </div>
    <div>
      <p><%= @activity.description %></p>
    </div>
    <div>
      <p>Additional info:</p>
      <p><%= @activity.useful_information %></p>
    </div>
  </div>
</div>

<%# add map with geocode %>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
