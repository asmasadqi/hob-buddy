<ul id="slides">
  <% @users.each do |user| %>
    <div class="slide" data-id="<%=user.id %>">
    <%= @markers %>
      <li>
        <div>
          <%= image_tag user.avatar, height: 200, width: 200, crop: :fill %>
        </div>
        <div>
          <%= user.full_name %> -
          <%= user.age %>
        </div>
        <div>
          <%= user.location %>
        </div>
      </li>
    </div>
  <% end %>
</ul>

<div>
  <button class="controls btn btn-primary">x</button>
  <button class="controls btn btn-warning">LIKE</button>
</div>

<%# add showing on slide css later%>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
