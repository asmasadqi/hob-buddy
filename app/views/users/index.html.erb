<div class="tinder">
  <div class="card text-center m-2">
    <img src="https://placeimg.com/200/300/people">
    <h3>Louise</h3>
    <p>J'aime faire du tennis</p>
  </div>

  <div class="tinder--buttons text-center d-flex justify-content-around">
    <button id="nope"><i class="fa fa-remove"></i></button>
    <button id="love"><i class="fa fa-heart"></i></button>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<ul id="slides">
  <% @users.each do |user| %>
    <div class="slide" data-id="<%=user.id %>">
      <li>
        <div>
          <%= image_tag user.avatar, height: 200, width: 200, crop: :fill %>
        </div>
        <div>
          <%= user.full_name %> -
          <%= user.age %>
        </div>
        <div>
          <%= user.location %>
        </div>
      </li>
    </div>
  <% end %>
</ul>

<div>
  <button class="controls btn btn-primary">x</button>
  <button class="controls btn btn-warning">LIKE</button>
</div>

